    <div class="container">  
        <form id="contact" action="" method="post">
          <h3>Add Your Project!</h3>
          <h4>Please Fill Out The Following</h4>
          <fieldset>
            <input placeholder="title" type="email" tabindex="2" required>
          </fieldset>
          <fieldset>
            <select name="languages" id="language" >
              <option value="2">HTML</option>
              <option value="1">CSS</option>
              <option value="3">JavaScript</option>
              <option value="4">Python 3</option>
          </fieldset>
          <fieldset>
            <input placeholder=" link you application (Your Web Site starts with http://)" type="url" tabindex="4" required>
          </fieldset>
          <fieldset>
            <textarea placeholder="Description" tabindex="5" id="description" required></textarea>
          </fieldset>
          <fieldset>
            <textarea placeholder="Project (optional)" tabindex="5" id="Project" required></textarea>
          </fieldset>
          <fieldset>
            <button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Submit</button>
          </fieldset>
        </form>
      </div>

